{
  "name": "@usethoth/mcp-server",
  "version": "1.0.6",
  "description": "Model Context Protocol server for Thoth content creation platform",
  "mcpName": "io.github.zeiq-co/thoth-mcp",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "thoth-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build",
    "publish": "pnpm build && pnpm publish --access public --no-git-checks"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "thoth",
    "content-creation",
    "ai"
  ],
  "author": "Thoth Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/perminder-klair/thoth-mcp.git"
  },
  "homepage": "https://github.com/perminder-klair/thoth-mcp#readme",
  "bugs": {
    "url": "https://github.com/perminder-klair/thoth-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^24.3.3",
    "eslint": "^9.37.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
